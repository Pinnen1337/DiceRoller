<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.WoundsPage"
             Title="WoundsPage">
    <VerticalStackLayout Spacing="20">

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">

            <Grid
                RowDefinitions="50, 50, 50, 0, 0"
                ColumnDefinitions="50, 50, 50, 50, 50, 50"
                Padding="10"
                RowSpacing="10"
                ColumnSpacing="20"
                >
                <Image
                    Grid.Row="0"
                    Grid.Column="0"
                    Source="dice1.png"
                    WidthRequest="50"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    x:Name="WoundsCount1"
                    Text="{Binding WoundsCounter[0]}"
                    HorizontalOptions="Center"/>

                <Image
                    Grid.Row="0"
                    Grid.Column="1"
                    Source="dice2.png"
                    WidthRequest="50"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    x:Name="WoundsCount2"
                    Text="{Binding WoundsCounter[1]}"
                    HorizontalOptions="Center"/>

                <Image
                    Grid.Row="0"
                    Grid.Column="2"
                    Source="dice3.png"
                    WidthRequest="50"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    x:Name="WoundsCount3"
                    Text="{Binding WoundsCounter[2]}"
                    HorizontalOptions="Center"/>

                <Image
                    Grid.Row="0"
                    Grid.Column="3"
                    Source="dice4.png"
                    WidthRequest="50"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="3"
                    x:Name="WoundsCount4"
                    Text="{Binding WoundsCounter[3]}"
                    HorizontalOptions="Center"/>

                <Image
                    Grid.Row="0"
                    Grid.Column="4"
                    Source="dice5.png"
                    WidthRequest="50"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="4"
                    x:Name="WoundsCount5"
                    Text="{Binding WoundsCounter[4]}"
                    HorizontalOptions="Center"/>

                <Image
                    Grid.Row="0"
                    Grid.Column="5"
                    Source="dice6.png"
                    WidthRequest="50"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="5"
                    x:Name="WoundsCount6"
                    Text="{Binding WoundsCounter[5]}"
                    HorizontalOptions="Center"/>

            </Grid>

        </HorizontalStackLayout>

        <Label
            Grid.Row="2"
            Grid.Column="2"
            x:Name="WoundsLabel"
            Text=""
            FontSize="50"
            TextColor="White"
            HorizontalOptions="Center"/>

        <Entry
            x:Name="DiceInput"
            Placeholder="Antal trÃ¤ffar"/>

        <HorizontalStackLayout HorizontalOptions="Center">

            <Picker
                x:Name="StrengthPicker"
                Title="Strength"
                WidthRequest="150"
                >
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>1</x:String>
                        <x:String>2</x:String>
                        <x:String>3</x:String>
                        <x:String>4</x:String>
                        <x:String>5</x:String>
                        <x:String>6</x:String>
                        <x:String>7</x:String>
                        <x:String>8</x:String>
                        <x:String>9</x:String>
                        <x:String>10</x:String>
                        <x:String>11</x:String>
                        <x:String>12</x:String>
                        <x:String>13</x:String>
                        <x:String>14</x:String>
                        <x:String>15</x:String>
                        <x:String>16</x:String>
                        <x:String>17</x:String>
                        <x:String>18</x:String>
                        <x:String>19</x:String>
                        <x:String>20</x:String>
                    </x:Array>
                </Picker.ItemsSource>

            </Picker>
            <Picker
                x:Name="ToughnessPicker"
                Title="Toughness"
                WidthRequest="150"
                >
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>1</x:String>
                        <x:String>2</x:String>
                        <x:String>3</x:String>
                        <x:String>4</x:String>
                        <x:String>5</x:String>
                        <x:String>6</x:String>
                        <x:String>7</x:String>
                        <x:String>8</x:String>
                        <x:String>9</x:String>
                        <x:String>10</x:String>
                        <x:String>11</x:String>
                        <x:String>12</x:String>
                        <x:String>13</x:String>
                        <x:String>14</x:String>
                        <x:String>15</x:String>
                        <x:String>16</x:String>
                        <x:String>17</x:String>
                        <x:String>18</x:String>
                        <x:String>19</x:String>
                        <x:String>20</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </HorizontalStackLayout>

        <Button
            Text="Roll"
            Clicked="OnWoundRollClicked"
            BackgroundColor="Green"/>

    </VerticalStackLayout>
</ContentPage>