<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DiceRoller.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DiceRoller"
    Shell.FlyoutBehavior="Disabled"
    Title="DiceRoller">

    <TabBar>

        <Tab 
            Title="Hits">
            <ShellContent
                ContentTemplate="{DataTemplate local:HitsPage}"/>
        </Tab>

        <Tab
            Title="Wounds">
            <ShellContent
                ContentTemplate="{DataTemplate local:WoundsPage}"/>
        </Tab>

        <Tab
            Title="Saves">
            <ShellContent
                ContentTemplate="{DataTemplate local:SavesPage}"/>
        </Tab>
            
    </TabBar>

</Shell>
